{
  "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "babel",
    "react",
    "promise"
    ],
    "env": {
      "browser" : true
    },
    "globals": {
      "__DEV__"      : false,
      "__TEST__"     : false,
      "__PROD__"     : false,
      "__COVERAGE__" : false
    },
    "settings": {
      "import/resolver": {
        "webpack":{
          "config": "config/webpack.config.js"
        }
      }
    },
    "rules": {
      "jsx-quotes"           : [2, "prefer-single"],
      "max-len"              : [1, 100, 2],
      "import/no-named-as-default" : 0,
      "react/jsx-filename-extension" : 0,
      "no-param-reassign": ["error", { "props": false }],
      "no-mixed-operators": 1,
      "no-underscore-dangle": 0,
    },
}
