{
  "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "babel",
    "react",
    "promise"
    ],
    "env": {
      "browser" : true
    },
    "globals": {
      "__DEV__"      : false,
      "__TEST__"     : false,
      "__PROD__"     : false,
      "__COVERAGE__" : false
    },
    "rules": {
      "jsx-quotes"           : [2, "prefer-single"],
      "max-len"              : [2, 100, 2],
      "import/no-named-as-default" : 0,
      "react/jsx-filename-extension" : 0,
    },
}
